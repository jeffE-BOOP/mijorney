<script>
    const steps = ['step1', 'step2', 'step3', 'step4'];
    const simulationNames = [
        "Maria Santos", "João Pereira", "Ana Paula", "Lucas Silva", "Carla Almeida", "Felipe Costa",
        "Amanda Nunes", "Gabriel Ferreira", "Juliana Martins", "Renato Oliveira", "Larissa Vieira", "Ricardo Alves"
    ];

    let currentIndex = 0;

    function nextStep(nextId) {
        document.getElementById(steps[currentIndex]).classList.add('hidden');
        document.getElementById(nextId).classList.remove('hidden');
        currentIndex++;
    }

    function startSimulation() {
        const simulationContainer = document.getElementById('simulation-names');
        let index = 0;
        setInterval(() => {
            if (index < simulationNames.length) {
                const nameElement = document.createElement('span');
                nameElement.textContent = `${simulationNames[index]} acabou de adquirir o treinamento!`;
                simulationContainer.appendChild(nameElement);
                index++;
            }
        }, 10000);
    }

    startSimulation();
</script>

